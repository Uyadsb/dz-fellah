# Django Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False

# Allowed Hosts (comma-separated, Railway will auto-add its domain)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Railway will provide DATABASE_URL automatically, but you can also use individual vars
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=your-db-host.railway.app
DB_PORT=5432

# Optional: If using Railway's DATABASE_URL (recommended)
# DATABASE_URL=postgresql://user:password@host:port/dbname
